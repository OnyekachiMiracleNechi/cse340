<main>
  <% if (success) { %>
  <div class="notice success"><%= success %></div>
<% } %>

<% if (error) { %>
  <div class="notice error"><%= error %></div>
<% } %>

<% if (notice) { %>
  <div class="notice"><%= notice %></div>
<% } %>

  <h1><%= vehicle.inv_year %> <%= vehicle.inv_make %> <%= vehicle.inv_model %></h1>
  
  <div class="vehicle-detail">
    <img src="<%= vehicle.inv_image %>" alt="Image of <%= vehicle.inv_make %> <%= vehicle.inv_model %>">
    
    <ul>
      <li><strong>Price:</strong> $<%= vehicle.inv_price.toLocaleString() %></li>
      <li><strong>Description:</strong> <%= vehicle.inv_description %></li>
      <li><strong>Color:</strong> <%= vehicle.inv_color %></li>
      <li><strong>Miles:</strong> <%= vehicle.inv_miles.toLocaleString() %></li>
    </ul>

    <!-- Add to Favorites Button -->
    <form action="/account/favorites/add/<%= vehicle.inv_id %>" method="post">
      <button type="submit">Add to Favorites</button>
    </form>

    <!-- Go to Favorites link -->
    <p>
      <a href="/account/favorites" class="go-to-favorites">Go to Favorites</a>
    </p>
  </div>
</main>
