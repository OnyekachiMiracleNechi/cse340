<!DOCTYPE html>
<html lang="en">
  <body>
    <div class="page-container">
      <main>
        <h1><%= title %></h1>

        <% if (success && success.length > 0) { %>
          <% success.forEach(msg => { %>
            <div class="success"><%= msg %></div>
          <% }) %>
        <% } %>

        <% if (message && message.length > 0) { %>
          <% message.forEach(msg => { %>
            <div class="notice"><%= msg %></div>
          <% }) %>
        <% } %>

        <% if (errors && errors.length > 0) { %>
          <ul class="flash error">
            <% errors.forEach(error => { %>
              <li><%= error.msg %></li>
            <% }) %>
          </ul>
        <% } %>

        <!-- âœ… Delete Confirmation Form -->
        <form id="deleteInventoryForm" action="/inv/delete" method="post">
          <!-- Hidden inventory ID -->
          <input type="hidden" name="inv_id" value="<%= inv_id %>">

          <label for="inv_make">Make</label>
          <input type="text" id="inv_make" name="inv_make" value="<%= inv_make %>" readonly>

          <label for="inv_model">Model</label>
          <input type="text" id="inv_model" name="inv_model" value="<%= inv_model %>" readonly>

          <label for="inv_year">Year</label>
          <input type="number" id="inv_year" name="inv_year" value="<%= inv_year %>" readonly>

          <label for="inv_price">Price</label>
          <input type="number" id="inv_price" name="inv_price" value="<%= inv_price %>" readonly>

          <p>Confirm Deletion - The delete is permanent.</p>
          <button type="submit" class="delete-btn">Delete Inventory</button>
        </form>
      </main>
    </div>
  </body>
</html>
