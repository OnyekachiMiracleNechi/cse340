<main class="inventory-container">
  <h1>Inventory Management</h1>

  <% if (notice && notice.length > 0) { %>
    <div class="notice flash">
      <% notice.forEach(function(msg) { %>
        <p><%= msg %></p>
      <% }) %>
    </div>
  <% } %>

  <% if (success && success.length > 0) { %>
    <div class="success flash">
      <% success.forEach(function(msg) { %>
        <p><%= msg %></p>
      <% }) %>
    </div>
  <% } %>

  <% if (errors && errors.length > 0) { %>
    <div class="error flash">
      <% errors.forEach(function(msg) { %>
        <p><%= msg %></p>
      <% }) %>
    </div>
  <% } %>



  <ul class="inventory-links">
    <li><a href="/inv/add-classification">Add New Classification</a></li>
    <li><a href="/inv/add-inventory">Add New Inventory</a></li>
  </ul>

  <h2>Manage Inventory</h2>
  <p>Select a classification from the list to see available inventory items.</p>

  <div class="classification-select">
    <%- classificationSelect %>
  </div>

  <table id="inventoryDisplay"></table>

  <noscript>JavaScript must be enabled to use this page.</noscript>
</main>

<script src="/js/inventory.js"></script>
