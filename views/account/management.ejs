<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title %></title>
</head>
<body>

  <h1>Account Management</h1>

  <% if (account_firstname) { %>
    <h2>Welcome <%= account_firstname %></h2>
  <% } else { %>
    <h2>Welcome to your account</h2>
  <% } %>

  <!-- Flash messages -->
  <% if (success && success.length > 0) { %>
    <% success.forEach(msg => { %>
      <div class="success"><%= msg %></div>
    <% }) %>
  <% } %>

  <% if (notice && notice.length > 0) { %>
    <% notice.forEach(msg => { %>
      <div class="notice"><%= msg %></div>
    <% }) %>
  <% } %>

  <% if (errors && errors.length > 0) { %>
    <ul class="flash error">
      <% errors.forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <!-- Update account link for all users -->
  <p>
    <a href="/account/update/<%= account_id %>">Update Account Information</a>
  </p>

  <!-- Inventory management section for Employee/Admin only -->
  <% if (account_type === 'Employee' || account_type === 'Admin') { %>
    <h3>Inventory Management</h3>
    <p><a href="/inv/">Manage Inventory</a></p>
  <% } %>

  <!-- Logout link -->
  <p><a href="/account/logout">Logout</a></p>

</body>
</html>
